{
  "manifest_version": 3,
  "name": "Image Compressor",
  "version": "1.0.1",
  "description": "Compress PNG, SVG, JPG, and WebP images locally without losing quality. All processing is done offline, keeping your data private",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["sidePanel", "downloads"],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Click to open"
  },
  "background": {
    "service_worker": "background.js"
  }
}
