{
  "manifest_version": 3,
  "name": "Reduce Image Size",
  "version": "1.0.0",
  "description": "Reduce PNG, SVG, JPG, and WebP image sizes locally without losing quality. All processing is done offline, keeping your data private",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["sidePanel", "downloads"],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Click to open"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"]
}
